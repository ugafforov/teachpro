rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper funksiyalar
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    function isOwner(teacherId) {
      return isAuthenticated() && request.auth.uid == teacherId;
    }

    // Teachers collection - hamma o'qituvchilar bir-birini ko'ra oladi
    match /teachers/{teacherId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == teacherId;
      allow update: if isAuthenticated() && (request.auth.uid == teacherId || isAdmin());
      allow delete: if isAdmin();
    }

    // Admins collection
    match /admins/{adminId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Students collection
    match /students/{studentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (isOwner(resource.data.get('teacher_id', '')) || isAdmin());
    }

    // Groups collection
    match /groups/{groupId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (isOwner(resource.data.get('teacher_id', '')) || isAdmin());
    }

    // Attendance Records collection
    match /attendance_records/{recordId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (isOwner(resource.data.get('teacher_id', '')) || isAdmin());
    }

    // Group Notes collection
    match /group_notes/{noteId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (isOwner(resource.data.get('teacher_id', '')) || isAdmin());
    }

    // Reward/Penalty History collection
    match /reward_penalty_history/{historyId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (isOwner(resource.data.get('teacher_id', '')) || isAdmin());
    }

    // Exams collection
    match /exams/{examId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (isOwner(resource.data.get('teacher_id', '')) || isAdmin());
    }

    // Exam Results
    match /exam_results/{resultId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (isOwner(resource.data.get('teacher_id', '')) || isAdmin());
    }
    
    // Exam Types
    match /exam_types/{typeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Archived Data - Barcha o'qituvchilar ko'ra olishi uchun read huquqi ochildi
    match /archived_students/{docId} { 
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (isOwner(resource.data.get('teacher_id', '')) || isAdmin());
    }
    match /archived_groups/{docId} { 
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (isOwner(resource.data.get('teacher_id', '')) || isAdmin());
    }
    match /archived_exams/{docId} { 
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (isOwner(resource.data.get('teacher_id', '')) || isAdmin());
    }

    // Deleted Data (Backup/Audit)
    match /deleted_students/{docId} { 
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin() || (isAuthenticated() && isOwner(resource.data.get('teacher_id', '')));
    }
    match /deleted_groups/{docId} { 
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin() || (isAuthenticated() && isOwner(resource.data.get('teacher_id', '')));
    }
    match /deleted_exams/{docId} { 
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin() || (isAuthenticated() && isOwner(resource.data.get('teacher_id', '')));
    }
    match /deleted_attendance_records/{docId} { 
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin() || (isAuthenticated() && isOwner(resource.data.get('teacher_id', '')));
    }
    match /deleted_reward_penalty_history/{docId} { 
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin() || (isAuthenticated() && isOwner(resource.data.get('teacher_id', '')));
    }
    match /deleted_exam_results/{docId} { 
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin() || (isAuthenticated() && isOwner(resource.data.get('teacher_id', '')));
    }
    match /deleted_student_scores/{docId} { 
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin() || (isAuthenticated() && isOwner(resource.data.get('teacher_id', '')));
    }
  }
}
